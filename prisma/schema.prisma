datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}


generator client {
  provider = "prisma-client-js"
}


model Type{
  id String @id @default(uuid())
  name String
  image String
  cars Car[]
  
}

model Make{
  id String @id @default(uuid())
  name String
  image String
  cars Car[]
 
}

model Car{
  id String @id @default(uuid())
  makeId String
  make Make @relation(fields: [makeId],references: [id])
  typeId String
  type Type @relation(fields: [typeId],references: [id])
  model String
  year String
  color String
  regNo String
  rentalPrice Decimal
  price Decimal
  isAvailable Boolean
  isFeatured Boolean
  location String
  mileage Int
  engineSize String
  HP Int
  acceleration Decimal
  fuelType String
  images Image[]

   createdAt DateTime @default(now())
   updatedAt DateTime @updatedAt

   @@index([makeId])
    @@index([typeId])
}

model Image{
   id String @id @default(uuid())
   carId String
   car Car @relation(fields: [carId],references: [id],onDelete: Cascade)
   url String

   createdAt DateTime @default(now())
   updatedAt DateTime @updatedAt

   @@index([carId])
}